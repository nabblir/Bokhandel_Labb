<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dd="urn:gong-wpf-dragdrop"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="Bokhandel_Labb.Views.BokbyteView"
        WindowStartupLocation="CenterOwner"
        Title="Överför Böcker" Height="700" Width="1100">

    <Window.Resources>
        <!-- Style för ListBox items -->
        <Style x:Key="BookItemStyle" TargetType="{x:Type ListBoxItem}">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataTemplate för LagerSaldo -->
        <DataTemplate x:Key="LagerSaldoTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>


                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding Titel}" FontWeight="Bold" FontSize="14"/>
                    <TextBlock Text="{Binding FörfattareNamn}" FontStyle="Italic" Foreground="Black" FontSize="12"/>
                    <TextBlock Text="{Binding Isbn, StringFormat=ISBN: {0}}" FontSize="10" Foreground="Black"/>
                    <TextBlock Text="{Binding AntalILager, StringFormat=Lagersaldo: {0}}" FontSize="14"/>
                </StackPanel>

                <!--Gammal visning av lagerstatus>
                <Border Grid.Column="1" 
                        Background="#BF82A5E1"
                        CornerRadius="5" 
                        Padding="5,5" 
                        Margin="0,0,0,0"
                        HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center"
                        >
                <TextBlock Text="{Binding AntalILager, StringFormat=Antal: \{0\}}"
                               VerticalAlignment="Center"
                               Foreground="White" 
                               FontWeight="Bold"
                               FontSize="12"/>
                
                </Border>
                </-->


            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Överför Böcker" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"/>

        <!-- Butik -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Vänster butik -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="Välj Butik:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding TillgängligaButiker1}"
                          SelectedItem="{Binding ValdButik1}"
                          DisplayMemberPath="ButiksNamn"
                          Padding="10"
                          FontSize="14"
                          HorizontalAlignment="Stretch"/>
            </StackPanel>

            <!-- Höger butik-->
            <StackPanel Grid.Column="2">
                <TextBlock Text="Välj Butik:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding TillgängligaButiker2}"
                          SelectedItem="{Binding ValdButik2}"
                          DisplayMemberPath="ButiksNamn"
                          Padding="10"
                          FontSize="14"
                          HorizontalAlignment="Stretch"/>
            </StackPanel>
        </Grid>

        <!-- Bok lista -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Butik 1 Lager -->
            <Border Grid.Column="0" 
                    BorderBrush="#7F005AC8" 
                    BorderThickness="2" 
                    CornerRadius="5"
                    Padding="10">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                        <TextBlock Text="{Binding ValdButik1.ButiksNamn, StringFormat=Butik: \{0\}}" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   Foreground="#1976D2"/>
                        <TextBlock Text="{Binding ValdButik1.Adress}" 
                                   FontSize="12" 
                                   Foreground="#666666"/>
                        <TextBlock Text="{Binding Butik1Böcker.Count, StringFormat=Antal olika böcker: \{0\}}" 
                                   FontSize="12" 
                                   FontWeight="SemiBold"
                                   Foreground="#333333"
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <ListBox ItemsSource="{Binding Butik1Böcker}"
                             ItemTemplate="{StaticResource LagerSaldoTemplate}"
                             ItemContainerStyle="{StaticResource BookItemStyle}"
                             dd:DragDrop.IsDragSource="True"
                             dd:DragDrop.IsDropTarget="True"
                             dd:DragDrop.DropHandler="{Binding DropHandler}"
                             dd:DragDrop.UseDefaultDragAdorner="True"
                             dd:DragDrop.DefaultDragAdornerOpacity="0.5" av:ItemsSource="{av:SampleData ItemCount=5}" BorderBrush="#00000000"/>
                </DockPanel>
            </Border>

            <!-- Flashy grejer här -->
            <StackPanel Grid.Column="1" 
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <TextBlock Text="&gt;" 
                           FontSize="30" 
                           HorizontalAlignment="Center"
                           Foreground="#999999"
                           Margin="0,0,0,5"/>
                <TextBlock Text="&lt;"
                           FontSize="30" 
                           HorizontalAlignment="Center"
                           Foreground="#999999"/>
            </StackPanel>

            <!-- Butik 2 Lager -->
            <Border Grid.Column="2" 
                    BorderBrush="#7F00C85A" 
                    BorderThickness="2" 
                    CornerRadius="5"
                    Padding="10">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                        <TextBlock Text="{Binding ValdButik2.ButiksNamn, StringFormat=Butik: \{0\}}" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   Foreground="#388E3C"/>
                        <TextBlock Text="{Binding ValdButik2.Adress}" 
                                   FontSize="12" 
                                   Foreground="#666666"/>
                        <TextBlock Text="{Binding Butik2Böcker.Count, StringFormat=Antal olika böcker: \{0\}}" 
                                   FontSize="12" 
                                   FontWeight="SemiBold"
                                   Foreground="#333333"
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <ListBox ItemsSource="{Binding Butik2Böcker}"
                             ItemTemplate="{StaticResource LagerSaldoTemplate}"
                             ItemContainerStyle="{StaticResource BookItemStyle}"
                             dd:DragDrop.IsDragSource="True"
                             dd:DragDrop.IsDropTarget="True"
                             dd:DragDrop.DropHandler="{Binding DropHandler}"
                             dd:DragDrop.UseDefaultDragAdorner="True"
                             dd:DragDrop.DefaultDragAdornerOpacity="0.5" BorderBrush="#00000000" av:ItemsSource="{av:SampleData ItemCount=5}"/>
                </DockPanel>
            </Border>
        </Grid>

        <!-- Footer -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">
            <Button Content="Avbryt" 
                    Command="{Binding CancelCommand}"
                    IsCancel="True"
                    Padding="15,8" 
                    Margin="0,0,10,0"
                    Background="#FFF59696"
                    Foreground="Black"
                    BorderThickness="1"
                    BorderBrush="Black"
                    Cursor="Hand"/>
            <Button Content="Återställ" 
                    Command="{Binding ÅterställCommand}"
                    Padding="15,8" 
                    Margin="0,0,10,0"
                    Background="#FFC8C8C8"
                    Foreground="Black"
                    BorderThickness="1"
                    BorderBrush="Black"
                    Cursor="Hand"/>
            <Button Content="Spara Ändringar" 
                    Command="{Binding SparaÄndringarCommand}"
                    Padding="15,8"
                    Background="#FF96F596"
                    Foreground="Black"
                    BorderThickness="1"
                    BorderBrush="Black"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>